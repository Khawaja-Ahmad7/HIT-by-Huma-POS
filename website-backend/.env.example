# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (Neon PostgreSQL)
# Use the web_service role with limited permissions
DATABASE_URL=postgresql://web_service:your_password@ep-xxx.us-east-2.aws.neon.tech/hitbyhuma_pos?sslmode=require

# Alternatively, use individual variables:
# DB_HOST=ep-xxx.us-east-2.aws.neon.tech
# DB_PORT=5432
# DB_NAME=hitbyhuma_pos
# DB_USER=web_service
# DB_PASSWORD=your_password
# DB_SSL=true

# CORS - Frontend URL (Vercel)
FRONTEND_URL=https://hitbyhuma.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
